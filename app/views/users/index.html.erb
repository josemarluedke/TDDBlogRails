<h1>Listing users</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>E-mail</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td class="name"><%= user.name %></td>
			<td><%= user.email %></td>
			<td><%= link_to 'Show', user %></td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
		</tr>
	<% end %>
	<tbody>
</table>

<br />

<%= link_to 'New User', new_user_path %>